= form_for(@entry) do |f|
  .field.form-inline
    .form-group
      = f.text_field :date, hidden: true
      = f.text_field :food, :autofocus=> true, :placeholder => "Food", class: 'form-control food'
      = f.text_field :calories, :placeholder => "kcal", :style => "text-align: Right", class: 'form-control calories'
      = f.submit "OK", class: "submit-button btn btn-default"
      %br
      %br
